{
	"extends": "@acme/tsconfig/internal-package.json",
	"compilerOptions": {
		"types": ["@cloudflare/workers-types"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"rootDir": ".",
		"outDir": "dist",
		"tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
