		"@trpc/server": "11.0.0-rc.354",
		"hono": "^4.2.7",
		"superjson": "^2.2.1"
	},
	"devDependencies": {
		"@acme/eslint-config": "workspace:*",
		"@acme/prettier-config": "workspace:*",
		"@acme/tsconfig": "workspace:*",
		"@cloudflare/workers-types": "^4.20240423.0",
		"eslint": "^9.0.0",
		"prettier": "^3.2.5",
		"typescript": "^5.4.5",
		"wrangler": "^3.51.2"
	},
	"prettier": "@acme/prettier-config"
