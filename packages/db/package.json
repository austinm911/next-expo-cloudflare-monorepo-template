{
	"name": "@acme/db",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./schema": {
			"types": "./dist/schema.d.ts",
			"default": "./src/schema/index.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf .turbo node_modules",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"format:fix": "prettier --write . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"push": "pnpm with-env drizzle-kit push:pg --config src/drizzle.config.ts",
		"generate": "pnpm with-env drizzle-kit generate:pg --config src/drizzle.config.ts",
		"migrate": "tsx src/migrate.ts",
		"studio": "pnpm with-env drizzle-kit studio --config src/drizzle.config.ts",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false",
		"with-env": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@acme/env": "workspace:*",
		"add": "^2.0.6",
		"drizzle-orm": "^0.30.9",
		"drizzle-zod": "^0.5.1",
		"postgres": "^3.4.4",
		"zod": "^3.23.4"
	},
	"devDependencies": {
		"@acme/eslint-config": "workspace:*",
		"@acme/prettier-config": "workspace:*",
		"@acme/tsconfig": "workspace:*",
		"drizzle-kit": "^0.20.14",
		"eslint": "^9.0.0",
		"prettier": "^3.2.5",
		"typescript": "^5.4.5"
	},
	"prettier": "@acme/prettier-config"
}
